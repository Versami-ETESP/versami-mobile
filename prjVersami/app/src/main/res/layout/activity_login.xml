<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context=".views.Login" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/quicksand"
        android:text="Acesse agora sua conta na Versami e explore diversas avaliações dos seus livros favoritos!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/login_txtUsuario"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Nome de Usuário"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/login_txtPass"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_txtUsuario" />

    <View
        android:id="@+id/login_container_left"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/form_top_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/login_container_right"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/form_top_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/versamilogoblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/login_btnAcessar"
        android:layout_width="176dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_button_account"
        android:fontFamily="@font/quicksand_medium"
        android:text="Acessar Conta"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_txtPass" />

    <android.widget.Button
        android:id="@+id/login_btnTrocaSenha"
        android:layout_width="176dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_account"
        android:fontFamily="@font/quicksand_medium"
        android:text="Esqueceu a senha?"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btnAcessar" />

    <android.widget.Button
        android:id="@+id/login_btnCriar"
        android:layout_width="178dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_access"
        android:fontFamily="@font/quicksand_medium"
        android:text="Criar Conta"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="OU"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btnTrocaSenha" />

</android.support.constraint.ConstraintLayout>