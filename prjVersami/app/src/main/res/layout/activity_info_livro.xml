<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.InfoLivro">
    <ProgressBar
        android:id="@+id/livroinfo_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/livroinfo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/livroinfo_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/livroinfo_capa"
                android:layout_width="180dp"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/livroinfo_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo do Livro"
            android:textSize="27dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:singleLine="true"
            android:ellipsize="marquee"/>
        <TextView
            android:id="@+id/livroinfo_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginBottom="15dp"/>
        <android.widget.Button
            android:id="@+id/livroinfo_btnFavorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_versamicolor"
            android:text="Adicionar aos Favoritos"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginBottom="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GÃªnero "
                android:textSize="22dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/livroinfo_genero"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/rounded_button_access"
                android:text="Nome do Genero"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#D3D3D3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobre o Livro"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/livroinfo_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</ScrollView>