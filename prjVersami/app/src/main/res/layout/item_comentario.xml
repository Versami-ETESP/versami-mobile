<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:id="@+id/itemComentario_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="23dp">
        <ImageView
            android:id="@+id/itemComentario_fotoPerfil"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:focusable="true"
            android:clickable="true"
            tools:srcCompat="@tools:sample/avatars"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemComentario_arroba"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="'@usuario'"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/itemComentario_conteudo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:fontFamily="@font/quicksand_medium"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <CheckBox
        android:id="@+id/itemComentario_curtida"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:button="@drawable/checkbox_custom_favorite"/>
</android.support.v7.widget.LinearLayoutCompat>